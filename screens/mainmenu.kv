<MainMenu>:
    AnchorLayout:
        Background:
            size: self.parent.size
            pos: self.parent.pos
            canvas:
                Rectangle:
                    pos: self.pos
                    size: self.size

        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: .3
            adaptive_height: True
            spacing: 10

            MenuButton:
                size_hint: 1, None
                height:
                text: "Singleplayer"
                on_press: app.root.current = 'prepare'; app.root.prepare.game_type = 'singleplayer'

            MenuButton:
                text: "Multiplayer"
                on_press: app.root.current = 'prepare'; app.root.prepare.game_type = 'multiplayer'

<MenuButton@RoundButton>:
    size_hint: 1, None
    height: "50dp"
