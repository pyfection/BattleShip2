<MainMenu>:
    AnchorLayout:
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: .3
            adaptive_height: True

            RoundButton:
                size_hint_x: 1
                text: "Singleplayer"
                on_press: app.root.current = 'prepare'; app.root.prepare.game_type = 'singleplayer'

            RoundButton:
                size_hint_x: 1
                text: "Multiplayer"
                on_press: app.root.current = 'prepare'; app.root.prepare.game_type = 'multiplayer'
